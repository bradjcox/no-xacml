// Policy for Conformance Test IIA002.
policy IIA002 denyOverrides
{
//	A subject with a role attribute of "Physician" can read or
//  write Bart Simpson's medical record.
	rule IIA1
	{
		permit if
		(
			subject.role.oneAndOnly() == "Physician" &&
			resource.id.oneAndOnly().uri() == "http://medico.com/record/patient/BartSimpson".uri() &&
			( action.id.oneAndOnly() == "read" || action.id.oneAndOnly() == "write" )
		)
	}
}